layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="zellij:compact-bar"
    }
    children
    pane size=1 borderless=true {
      plugin location="zellij:status-bar"
    }
  }

  tab name="frontend" cwd="$HOME/Development/" split_direction="horizontal" {
    pane name="code" size="70%"
    pane name="terminal" size="30%"
  }

  tab name="backend" cwd="$HOME/Development/" split_direction="horizontal" {
    pane name="code" size="70%"
    pane name="terminal" size="30%"
  }
}
